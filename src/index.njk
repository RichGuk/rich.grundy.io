  <div class="homepage-ramblings">
    <h2 class="homepage-ramblings__title h3">Ramblings</h2>

    <ul class="blog-card-wrapper">
      {% for post in collections.post | reverse | limit(4) %}
      <li class="blog-card">
        <a href="{{ post.url }}" class="blog-card__link">
          {% if post.data.hero -%}
          <div class="blog-card__hero" style="background-image: url({{post.data.hero}})"></div>
          {%- endif %}
          <h3 class="blog-card__title h5">{{ post.data.title }}</h3>
          <p class="blog-card__desc">{{ post.data.description }}</p>
          <time datetime="{{ post.date | htmlDateString }}" class="blog-card__date">{{ post.date | readableDate }}</time>
        </a>
      </li>
      {% endfor %}
    </ul>

    <div class="homepage-ramblings__archive-link">
      <a href="/blog/">View archive &gt;</a>
    </div>
  </div>

